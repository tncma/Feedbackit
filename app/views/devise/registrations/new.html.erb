<div class="container">
  <br>
  <div class="row">
      <div class="col-lg-4" style="float:none !important; margin:0 auto;">
        <div class="well">
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), id: "feedback_form", html: { class: "bs-example form-horizontal" }) do |f| %>
            <fieldset>
              	<legend>Signup</legend>
              	<div class="form-group">
                	<div class="col-lg-12">
                  		<%= f.text_field :name, value: '', :autofocus => true, placeholder:"Name" , class: "form-control" %></div>
               		</div>

              		<div class="form-group">
                		<div class="col-lg-12">
                  			<%= f.email_field :email, class: "form-control", placeholder: "Email" %>
                		</div>
              		</div>
              
              		<div class="form-group">
                		<div class="col-lg-12">
                  			<%= f.password_field :password, class: "form-control", placeholder: "Password" %>
                		</div>
              		</div>

              		<div class="form-group">
                		<div class="col-lg-12">
                  			<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Repeat Password" %>
                		</div>
              		</div>
              
              		<div class="form-group">
                		<div class="col-lg-12">
                  			<button type="submit" class="btn btn-success col-lg-3 col-lg-offset-2">Submit</button> 
                  			<button class="btn btn-default col-lg-3 col-lg-offset-2">Cancel</button>
                  		</div>
              		</div>
            	</fieldset>
            	<div id="shared_links"><%= render "devise/shared/links" %></div>
          	<% end %>
        </div>
      </div>
    </div>
</div>